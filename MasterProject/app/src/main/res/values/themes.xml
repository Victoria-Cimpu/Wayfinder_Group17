<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MasterProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/uOttawa_garnet</item>
        <item name="colorPrimaryVariant">@color/uOttawa_garnet_v</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/uOttawa_gray</item>
        <item name="colorSecondaryVariant">@color/uOttawa_gray_v</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="FontSizeSmall">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="FontSizeMedium">
        <item name="android:textSize">50sp</item>
    </style>
    <style name="FontSizeLarge">
        <item name="android:textSize">100sp</item>
    </style>
</resources>